<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:SukiUIDemo.ViewModels"
        prism:ViewModelLocator.AutoWireViewModel="True"
        x:Class="SukiUIDemo.MainWindow"
        x:DataType="local:MainWindowViewModel"
        Title="SukiUI 演示程序"
        Width="1200" Height="800">
    <DockPanel>
        <!-- 导航菜单 -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#f5f5f5" >
            <TextBlock Text="SukiUI 演示" FontSize="18" FontWeight="Bold" Margin="20,20,20,10" />
            <Button Content="首页" Margin="10,5" Command="{Binding NavigateToHomeCommand}" />
            <Button Content="按钮组件" Margin="10,5" Command="{Binding NavigateToButtonsCommand}" />
            <Button Content="输入组件" Margin="10,5" Command="{Binding NavigateToInputsCommand}" />
            <Button Content="数据展示" Margin="10,5" Command="{Binding NavigateToDataCommand}" />
            <Button Content="数据表格" Margin="10,5" Command="{Binding NavigateToDataTableCommand}" />
            <Button Content="导航组件" Margin="10,5" Command="{Binding NavigateToNavigationCommand}" />
        </StackPanel>
        
        <!-- 内容区域 -->
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </DockPanel>
</Window>