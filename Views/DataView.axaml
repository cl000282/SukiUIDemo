<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             x:Class="SukiUIDemo.Views.DataView">
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <TextBlock Text="数据展示组件演示" FontSize="24" FontWeight="Bold" />
            
            <suki:GlassCard Width="600">
                <StackPanel Spacing="15">
                    <TextBlock Text="进度条" FontSize="16" FontWeight="SemiBold" />
                    <suki:CircleProgressBar Value="30" />
                    <suki:CircleProgressBar Value="70" />
                </StackPanel>
            </suki:GlassCard>
            
            <suki:GlassCard Width="600">
                <StackPanel Spacing="15">
                    <TextBlock Text="滑块" FontSize="16" FontWeight="SemiBold" />
                    <Slider Minimum="0" Maximum="100" Value="50" />
                </StackPanel>
            </suki:GlassCard>
            
            <suki:GlassCard Width="600">
                <StackPanel Spacing="15">
                    <TextBlock Text="标签" FontSize="16" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Label Content="默认标签" />
                        <Label Content="主要标签"  />
                        <Label Content="成功标签"  />
                        <Label Content="警告标签"  />
                        <Label Content="错误标签" />
                    </StackPanel>
                </StackPanel>
            </suki:GlassCard>
        </StackPanel>
    </ScrollViewer>
</UserControl>